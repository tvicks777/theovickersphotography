---
import Layout from '../../layouts/Layout.astro';
import fs from 'fs';
import path from 'path';

const thumbsDir = path.resolve('./public/images/a9x3d2/thumbs');
const photos = fs.readdirSync(thumbsDir).filter(file => file.endsWith('.jpg')).sort();
---

<head>
  <meta charset="UTF-8" />
  <title>Theo Vickers | EUMS Summer Concert 2025</title>
  <meta name="robots" content="noindex, nofollow" />
</head>

<Layout>

  <header class="site-header">
    <h1 style="text-align: center;">Theo Vickers Photography</h1>
  </header>

  <h1 style="text-align: center; font-weight: normal;">EUMS Summer Concert 2025</h1>

  <div style="text-align: center; margin: 1rem 0;">
    <a href="https://drive.google.com/uc?export=download&id=1NvqroxhtaeCNCDEqJYWE3nUKD5vdSg5G" target="_blank" rel="noopener">
  <button>Download All Photos</button>
    </a>
  </div>

  <div class="gallery">
    {photos.map(photo => (
      <a href={`/galleries/a9x3d2/full/${photo.replace('.jpg', '')}`}>
        <img src={`/images/a9x3d2/thumbs/${photo}`} alt={`Concert ${photo}`} loading="lazy" />
      </a>
    ))}
  </div>

  <style>
    body {
      margin: 0;
      font-family: 'Fira Code', monospace;
      background: #fdfdfd;
      color: #222;
    }

    html, body {
      overflow-x: hidden;
    }

    .site-header {
      text-align: center;
      padding-top: 1rem;
    }

    .gallery {
      column-count: 1;
      column-gap: 1rem;
      padding: 1rem;
    }

    @media (min-width: 500px) {
      .gallery {
        column-count: 2;
      }
    }

    @media (min-width: 800px) {
      .gallery {
        column-count: 3;
      }
    }

    @media (min-width: 1200px) {
      .gallery {
        column-count: 4;
      }
    }

    @media (min-width: 1600px) {
      .gallery {
        column-count: 5;
      }
    }

    .gallery img {
      width: 100%;
      display: block;
      margin-bottom: 1rem;
      border-radius: 8px;
      break-inside: avoid;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .gallery img:hover {
      transform: scale(1.03);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 0 auto;
    }

    a button {
      background-color: #333;
      color: #fff;
      padding: 0.6rem 1.2rem;
      border: none;
      border-radius: 4px;
      font-family: 'Fira Code', monospace;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    a button:hover {
      background-color: #555;
    }
</style>
</Layout>